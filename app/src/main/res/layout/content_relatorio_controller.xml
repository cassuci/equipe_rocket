<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.draft.rckt.equiperocket.Relatorio.RelatorioController"
    tools:showIn="@layout/app_bar_relatorio_controller">

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/checkbox_gastos"
        android:id="@+id/checkbox_gastos"
        android:checked="false"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:onClick="onCheckboxClicked" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/checkbox_receitas"
        android:id="@+id/checkbox_receitas"
        android:layout_below="@+id/checkbox_gastos"
        android:layout_alignParentStart="true"
        android:onClick="onCheckboxClicked" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/choose_data"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/checkbox_gastos" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/choose_dates"
        android:id="@+id/textView2"
        android:layout_below="@+id/checkbox_receitas"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_gerar_relatorio"
        android:id="@+id/button_gerar_relatorio"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="47dp"
        android:clickable="false"
        android:enabled="true"
        android:onClick="gerarRelatorio" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_start_date"
        android:id="@+id/button_start_date"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:onClick=""/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_end_date"
        android:id="@+id/button_end_date"
        android:layout_below="@+id/textView2"
        android:layout_toEndOf="@+id/button_start_date" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/startDateDisplay"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/endDateDisplay"
        android:layout_below="@+id/startDateDisplay"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
